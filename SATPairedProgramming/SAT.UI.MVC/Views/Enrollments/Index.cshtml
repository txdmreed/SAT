@model IEnumerable<SAT.DATA.EF.Enrollment>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (User.IsInRole("Admin, Scheduler") && Request.IsAuthenticated)
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
<table class="table" id="table_id">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EnrollmentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScheduledClass.FullCourseInfo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student.FullName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EnrollmentDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ScheduledClass.FullCourseInfo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.FullName)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.ScheduledClassId })
                    @if (User.IsInRole("Admin, Scheduler"))
                    {
                        <span>|</span>
                        @Html.ActionLink("Delete", "Delete", new { id = item.ScheduledClassId }) <span>|</span>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ScheduledClassId })
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
